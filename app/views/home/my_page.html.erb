</div>

<div class="new">
  <input type="button" value="새 여행 일정 만들기" onclick="window.location.href = '/home/new';">
</div>
<div class="save_box">
  <% for i in 0..@count-1 %>
    <div class="card">
      <div id="title">
        <p>가족 <%= @travel[i].position%>여행</p>
      </div>
      <hr>
      <div id="content">
        <div>
          <p><b><%=@travel[i].one-1%>박 <%=@travel[i].one%>일</b>동안</p>
          <p><b><%= @travel[i].position%></b>에서</p>
        </div>
        <% for j in 0..@travel[i].one-1 %>
          <div id="plan">
            <span id="circle"> <p>Day <%= j+1 %></p> </span>
            <span id="detail">
              <p><%= @hashdata[i][j] %></p>
            </span>
          </div>
       <% end %>
      </div>
      <hr>
      <div id="manage">
        <input type="button" value="전체보기">
        <input type="button" value="수정">
        <input type="button" value="삭제" onclick="alert('일정을 삭제하면 복구가 불가능 합니다.\n삭제하시겠습니까?')">
      </div>
    </div>
  <% end %>
</div>
<div id="withdraw">
  <input type="button" value="탈퇴하기">
</div>